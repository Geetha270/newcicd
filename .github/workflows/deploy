name: Deploy Docker Image to EC2

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v1

    - name: executing remote ssh commands using ssh key
      uses: appleboy/ssh-action@v1.2.0
      with:
        host: ${{ secrets.HOST }}
        username: ${{ secrets.USERNAME }}
        key: ${{ secrets.KEY }}
        port: ${{ secrets.PORT }}
        script: |
          cd /home/ubuntu/newcicd && git pull 
          sleep 5
          sudo docker stop cicd
          sleep 10
          sudo docker rm cicd
          sleep 5
          sudo docker rmi cicd
          sleep 9
          cd /home/ubuntu/newcicd && sudo docker build -t cicd . --no-cache 
          sleep 15
          sudo docker run -d --name cicd -p 8080:8080 cicd
